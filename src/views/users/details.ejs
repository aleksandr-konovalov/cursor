<%- contentFor('title') %> User Profile - <%= user.name %> <%-
contentFor('body') %>
<div class="user-details" data-testid="user-details">
  <div class="profile-info">
    <div class="profile-info-section">
      <div class="profile-info-label">Name</div>
      <h1 class="profile-info-value" data-testid="user-name">
        <%= user.name %>
      </h1>
    </div>

    <div class="profile-info-section">
      <div class="profile-info-label">Email</div>
      <div class="profile-info-value" data-testid="user-email">
        <%= user.email %>
      </div>
    </div>

    <div class="actions">
      <a
        href="/users/edit/<%= user.id %>"
        class="button"
        data-testid="edit-button"
        >Edit Profile</a
      >
      <form
        action="/users/remove/<%= user.id %>"
        method="POST"
        style="display: inline"
      >
        <button type="submit" class="button delete" data-testid="delete-button">
          Delete Account
        </button>
      </form>
      <a href="/users" class="button back" data-testid="back-button"
        >Back to List</a
      >
    </div>
  </div>
</div>
